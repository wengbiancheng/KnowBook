<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/sonfragment_imageView"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/show_book1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 应该设置字体的间距宽一点-->
            <TextView
                android:id="@+id/sonfragment_bookTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="我最喜欢的书单"
                android:textSize="16sp" />

            <Button
                android:id="@+id/sonfragment_btn"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:text="收藏"
                android:background="@color/s_black"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:focusable="false"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-5dp">

            <TextView
                android:id="@+id/sonfragment_leftPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人关注|" />

            <TextView
                android:id="@+id/sonfragment_rightPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本小说" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>