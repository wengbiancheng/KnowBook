<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center_vertical">

        <com.example.knowbooks.widget.CircleImageView
            android:id="@+id/item_sonComment_imageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/touxiang"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/item_sonComment_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄小明"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/item_sonComment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-04-14"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="#565656"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/item_sonComment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="14dp"
            android:background="@drawable/radiogroup_background"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_sonComment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这个评论挺好的，我很喜欢呀"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14dp"
        android:textColor="#999"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>