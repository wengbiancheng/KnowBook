<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="书籍名称:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/write_book_bookName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/edittext"
        android:hint="请输入书籍名称"
        android:paddingLeft="10dp"
        android:singleLine="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="书籍封面:"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <RelativeLayout
        android:id="@+id/write_book_bookImage1"
        android:layout_width="102dp"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="100dp"
            android:layout_height="128dp"
            android:scaleType="centerInside"
            android:src="@drawable/compose_pic_add_more"></ImageView>

        <ImageView
            android:id="@+id/iv_delete_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:src="@mipmap/image_delete"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/write_book_leftBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:enabled="false"
            android:text="上一页" />

        <Button
            android:id="@+id/write_book_rightBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下一页" />
    </LinearLayout>


</LinearLayout>