<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <include
        android:id="@+id/aty_main_title"
        layout="@layout/include_title" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="#fafafa"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/book_rb_show"
            style="@style/RadioButtonBottomTab"
            android:checked="true"
            android:text="社区"
            android:drawableTop="@mipmap/book148"
            android:layout_marginTop="5dp"
            />

        <RadioButton
            android:id="@+id/book_rb_list"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@mipmap/booklist48"
            android:layout_marginTop="5dp"
            android:text="书单" />

        <RadioButton
            android:id="@+id/book_rb_buy"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@mipmap/buybook48"
            android:layout_marginTop="5dp"
            android:text="买书" />

        <RadioButton
            android:id="@+id/book_rb_sell"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@mipmap/heart48"
            android:layout_marginTop="5dp"
            android:text="心愿" />

    </RadioGroup>

</LinearLayout>